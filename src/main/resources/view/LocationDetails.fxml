<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          prefWidth="700" prefHeight="500" fx:id="locationDetailsContainer">
    <columnConstraints>
        <ColumnConstraints percentWidth="72"/>
        <ColumnConstraints percentWidth="28"/>
    </columnConstraints>
    <ImageView fx:id="locationMap" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="500">
        <Label fx:id="locationName"/>
        <Label fx:id="timeslot"/>
        <Label fx:id="approxTravelTime"/>
    </VBox>
</GridPane>
