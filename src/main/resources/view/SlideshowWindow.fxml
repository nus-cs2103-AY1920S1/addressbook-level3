<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Slideshow" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
         <VBox alignment="TOP_CENTER" prefHeight="176.0" prefWidth="254.0">
            <children>
               <HBox alignment="CENTER_RIGHT">
                  <children>
                     <Label fx:id="tipLabel" text="Press 'Esc' to exit" textAlignment="RIGHT" textFill="#00000076">
                        <font>
                           <Font name="System Italic" size="11.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               <Label fx:id="questionNoLabel" text="Question" textAlignment="CENTER">
                  <font>
                     <Font size="32.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="15.0" />
                  </VBox.margin>
               </Label>
               <Pane fx:id="questionPane" prefHeight="200.0" prefWidth="200.0">
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
               </Pane>
            </children>
            <opaqueInsets>
               <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </opaqueInsets>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </VBox>
    </Scene>
  </scene>
</fx:root>
