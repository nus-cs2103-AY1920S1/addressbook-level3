<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox minHeight="600.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <children>
                <Label id="notStartedLabel" contentDisplay="CENTER" text="Duration of each tasks"/>
                <ListView fx:id="taskListView" maxHeight="800.0" prefHeight="600.0" styleClass="pane-with-border"/>
            </children>
        </VBox>
        <VBox minHeight="600.0" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
            <children>
                <Label id="Tasks by status" alignment="CENTER" text="Tasks with statuses"/>
                <PieChart fx:id="taskByStatus" prefWidth="300" prefHeight="300"/>
            </children>
        </VBox>
    </children>
</HBox>
