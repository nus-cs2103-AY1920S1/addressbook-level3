<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.chart.PieChart?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="statusLabel" text="AVAILABLE DELIVERYMEN"/>
    <ListView fx:id="availableDeliverymanListView" VBox.vgrow="ALWAYS" />
        <ButtonBar fx:id="buttonPlaceholder" styleClass="context-menu" >
            <buttons>
                <Button fx:id="availableButton" text="AVAILABLE" ButtonBar.buttonData="LEFT" style="-fx-font: 22 cambria; " />
                <Button fx:id="unavailableButton" text="UNAVAILABLE" ButtonBar.buttonData="LEFT" style="-fx-font: 22 cambria; "/>
                <Button fx:id="deliveringButton" text="DELIVERING" ButtonBar.buttonData="LEFT" style="-fx-font: 22 cambria; "/>
            </buttons>
        </ButtonBar>
</VBox>
