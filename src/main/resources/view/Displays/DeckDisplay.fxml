<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root id="Content" fx:id="deckDisplay" minHeight="-Infinity" minWidth="-Infinity" styleClass="main-content-window" stylesheets="@../defaultStyles.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="deckName" alignment="CENTER" styleClass="window-title" text="Name of deck" textAlignment="CENTER" />
      <Label styleClass="window-subtitle" text="Cards in deck" />
      <VBox fx:id="questionList" />
      <Label fx:id="deckSize" alignment="CENTER" text="number of cards" />
      <HBox spacing="10.0">
         <children>
              <Button fx:id="startTest" mnemonicParsing="false" text="Start Review" />
              <Button fx:id="addQuestionButton" mnemonicParsing="false" text="Change Name/Add Question" />
              <Button fx:id="deleteDeckButton" mnemonicParsing="false" text="Delete Deck" textFill="RED" underline="true" />
         </children>
      </HBox>
   </children>
</fx:root>
