<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="placeHolder" styleClass="pane-with-border" maxWidth="Infinity" HBox.hgrow="ALWAYS"
            xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <HBox HBox.hgrow="ALWAYS">
        <children>
            <TextArea fx:id="timerText" editable="false" styleClass="timer-display" prefWidth="200.0">
            </TextArea>
            <ProgressBar fx:id="progressBar" styleClass="progress-bar" HBox.hgrow="ALWAYS"
                     prefWidth="570" maxWidth="Infinity">
                <padding>
                    <Insets left="5.0" right="5.0" top="7.0" />
                </padding>
            </ProgressBar>
        </children>
    </HBox>
</AnchorPane>
