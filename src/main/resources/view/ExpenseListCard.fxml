<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="SOMETIMES" >
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="80" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="80" percentWidth="30"/>
        </columnConstraints>
        <VBox GridPane.columnIndex="0" alignment="CENTER_LEFT" minHeight="105" >
        <padding>
          <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
              <Label fx:id="index">
                <minWidth>
                  <!-- Ensures that the label text is never truncated -->
                  <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
              </Label>
              <Label fx:id="description" text="\$first"/>
            </HBox>
            <FlowPane fx:id="tags" />
      </VBox>
        <HBox fx:id="priceColumn" id="price-column" GridPane.columnIndex="1" minHeight="105">

            <Label fx:id="price" text="\$price" minHeight="105"/>

        </HBox>

    </GridPane>
</HBox>
