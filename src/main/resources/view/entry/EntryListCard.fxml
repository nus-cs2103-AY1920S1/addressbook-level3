<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" styleClass="side-panel-listcard">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
         <ColumnConstraints />
    </columnConstraints>
      <padding>
        <Insets bottom="10" left="15" right="15" top="10" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="desc" styleClass="cell_big_label" text="\$desc" />
        <Label fx:id="amt" styleClass="cell_big_label" text="\$amt" />
        <Label fx:id="category" styleClass="cell_small_label" text="\$category" />

      </HBox>
      <FlowPane fx:id="tags" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <Label fx:id="date" styleClass="cell_small_label" text="\$date" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
