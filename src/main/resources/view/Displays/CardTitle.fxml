<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<fx:root alignment="CENTER" prefWidth="500.0" spacing="10.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="questionLabel" maxWidth="300.0" style="-fx-label-padding: 10;" text="Question " wrapText="true" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="editButton" mnemonicParsing="false" text="Edit" />
        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
    </children>
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
</fx:root>
