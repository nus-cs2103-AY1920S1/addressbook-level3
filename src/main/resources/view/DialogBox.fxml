<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox styleClass="dialog-box" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_RIGHT" >
    <children>
        <ImageView fx:id="displayPicture" fitHeight="40" fitWidth="40" preserveRatio="true" pickOnBounds="true" />
        <Label fx:id="dialog" wrapText="true" minHeight="40" styleClass="message-content" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</HBox>
