<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox id="detailCard" fx:id="detailCard" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="nameLabel" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <FlowPane fx:id="tags" />
            <HBox>
                <Label fx:id="phoneLabel" styleClass="cell_small_label"/>
                <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
            </HBox>
            <HBox>
                <Label fx:id="addressLabel" styleClass="cell_small_label" />
                <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
            </HBox>
            <HBox>
                <Label fx:id="emailLabel" styleClass="cell_small_label" />
                <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
            </HBox>
            <HBox>
                <Label fx:id="remarkLabel" styleClass="cell_small_label" />
                <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" />
            </HBox>
        </VBox>
    </GridPane>
</HBox>
