<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         title="Scheduler App" minWidth="760" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>

  <scene>
    <Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>
      <root>
        <VBox>
          <children>
            <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
              </padding>
            </StackPane>
            <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="NEVER">
              <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
              </padding>
            </StackPane>
            <TabPane fx:id="tabPane" minWidth="0.0" prefWidth="600.0" styleClass="pane-with-border" stylesheets="@DarkTheme.css" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                <Tab fx:id="schedulesTab" styleClass="label" text="Schedules">
                  <content>
                    <StackPane fx:id="schedulesPlaceholder" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0">
                      <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                      </stylesheets>
                    </StackPane>
                  </content>
                </Tab>
                <Tab fx:id="intervieweeListTab" styleClass="label" text="Interviewees">
                  <content>
                    <StackPane fx:id="intervieweeListPlaceholder" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0">
                      <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                      </stylesheets>
                    </StackPane>
                  </content>
                </Tab>
                <Tab fx:id="interviewerListTab" styleClass="label" text="Interviewers">
                  <content>
                    <StackPane fx:id="interviewerListPlaceholder" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0">
                      <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                      </stylesheets>
                    </StackPane>
                  </content>
                </Tab>
              </tabs>
              <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
              </padding>
            </TabPane>
            <StackPane fx:id="schedulePanelPlaceholder" minWidth="340" prefWidth="340" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
              <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
            </StackPane>
            <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="SOMETIMES" />
          </children>
        </VBox>
      </root>
    </Scene>



  </scene>
</fx:root>
