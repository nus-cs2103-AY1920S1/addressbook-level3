<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="30" />
        </columnConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="70"/>
        </columnConstraints>
        <VBox alignment="CENTER" minHeight="30" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <Label fx:id="person" styleClass="cell_big_label"/>
        </VBox>
        <VBox alignment="CENTER_LEFT" minHeight="30" GridPane.columnIndex="1">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <FlowPane fx:id="debts" minHeight="30" prefHeight="70" alignment="CENTER_LEFT"/>
        </VBox>
    </GridPane>
</HBox>
