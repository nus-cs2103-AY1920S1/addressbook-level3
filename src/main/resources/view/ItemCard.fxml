<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="cardPane" minHeight="80.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane prefWidth="150.0" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
      <HBox fx:id="box" alignment="CENTER_LEFT" minHeight="70.0" styleClass="card" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </GridPane.margin>
         <children>
          <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="5">
              <Label fx:id="id" styleClass="cell_big_label">
                <minWidth>
                  <!-- Ensures that the label text is never truncated -->
                  <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
              </Label>
              <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                  <VBox.margin>
                     <Insets top="2.0" />
                  </VBox.margin>
            </HBox>
            <FlowPane fx:id="tags">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </FlowPane>
               <HBox>
                  <children>
                  <Label fx:id="expiryDate" styleClass="cell_small_label" text="\$expiryDate">
                        <graphic>
                           <ImageView fitHeight="13.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true" translateX="-5.0">
                              <image>
                                 <Image url="@../images/expiry_date_icon.png" />
                              </image>
                           </ImageView>
                        </graphic>
                        <HBox.margin>
                           <Insets left="5.0" />
                        </HBox.margin>
                     </Label>
                  </children>
                  <VBox.margin>
                     <Insets top="4.0" />
                  </VBox.margin>
               </HBox>
               <padding>
                  <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
               </padding>
          </VBox>
         <Label fx:id="reminder" minWidth="80.0" styleClass="cell_small_label" text="\$reminder">
               <graphic>
                  <ImageView fitHeight="13.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true" translateX="-5.0">
                     <image>
                        <Image url="@../images/reminder_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
         <Label fx:id="quantity" contentDisplay="CENTER" minWidth="60.0" styleClass="cell_small_label" text="\$quantity">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <StackPane fx:id="days" minWidth="60.0" prefWidth="60.0" styleClass="stack-pane-days" HBox.hgrow="NEVER">
               <children>
                  <Label fx:id="status" text="Label">
                     <StackPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </StackPane.margin>
                  </Label>
               </children>
            </StackPane>
         </children>
      </HBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
