<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="main-content-window" stylesheets="@../defaultStyles.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label styleClass="window-subtitle" text="Add a new card" />
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
              <Label text="Type of card" />
              <ChoiceBox fx:id="cardTypeSelector" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
        <Label text="Enter your question" />
      <TextArea fx:id="questionField" prefHeight="50.0" />
        <Label fx:id="addAnswerLabel" text="Enter your answers" />
        <VBox fx:id="answerContainer" maxHeight="50.0" />
        <Button fx:id="onAddQuestion" mnemonicParsing="false" text="Add card" />
    </children>
</fx:root>
