<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<HBox id="groupCardPane" fx:id="groupCardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
<GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="TOP_LEFT" minHeight="105" GridPane.columnIndex="0">
        <padding>
            <Insets top="5" right="5" bottom="5" left="15" />
        </padding>
        <HBox spacing="5" alignment="TOP_LEFT">
            <Label fx:id="groupId" styleClass="cell_big_label">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <Label fx:id="groupName" styleClass="cell_big_label"></Label>
        </HBox>
        <Label fx:id="groupDescription" styleClass="cell_small_label"></Label>
    </VBox>
</GridPane>
</HBox>
