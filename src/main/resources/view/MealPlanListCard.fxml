<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane minHeight="150.0" minWidth="200.0" style="-fx-background-color: lightpink; -fx-background-radius: 8 8 8 8;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox fx:id="mealPlanListCard" alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
         <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5">
               <children>
                  <Label fx:id="id" styleClass="cell_big_label">
                     <minWidth>
                        <Region fx:constant="USE_PREF_SIZE" />
                     </minWidth>
                  </Label>
                  <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </HBox>
            <Label styleClass="cell_small_label" text="Day 1:" />
            <VBox fx:id="day1">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <Label styleClass="cell_small_label" text="Day 2:" />
            <VBox fx:id="day2">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <Label styleClass="cell_small_label" text="Day 3:" />
            <VBox fx:id="day3">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <Label styleClass="cell_small_label" text="Day 4:" />
            <VBox fx:id="day4">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <Label styleClass="cell_small_label" text="Day 5:" />
            <VBox fx:id="day5">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <Label styleClass="cell_small_label" text="Day 6:" />
            <VBox fx:id="day6">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            <Label styleClass="cell_small_label" text="Day 7:" />
            <VBox fx:id="day7">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </children>
      </VBox>
   </children>
</GridPane>
