<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root id="Content" minHeight="-Infinity" minWidth="-Infinity" styleClass="main-content-window" stylesheets="@../defaultStyles.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <Label styleClass="window-title" text="Create a new deck" />
      <HBox spacing="10.0">
         <children>
              <Label fx:id="deckName" alignment="CENTER" text="Name of deck:" />
              <TextField fx:id="deckNameInput" prefHeight="25.0" prefWidth="171.0" />
         </children>
      </HBox>
        <VBox fx:id="cardCreatingPane" VBox.vgrow="ALWAYS" />
        <Label fx:id="deckSize" text="0 cards" />
      <HBox spacing="10.0">
         <children>
              <Button fx:id="onSaveDeck" mnemonicParsing="false" text="Save deck" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
         </children>
      </HBox>
    </children>
</fx:root>
