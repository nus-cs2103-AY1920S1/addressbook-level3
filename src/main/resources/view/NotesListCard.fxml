<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="100" />
        </columnConstraints>
        <HBox alignment="CENTER_LEFT" minHeight="105" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label fx:id="noteTitle" styleClass="cell_big_label" textAlignment="CENTER">
                <minWidth>
                    <Region fx:constant="USE_PREF_SIZE"/>
                </minWidth>
            </Label>

            <padding>
                <Insets top="5" right="20" bottom="5" left="20" />
            </padding>

            <Label fx:id="description" text="\$first" styleClass="cell_small_label">
                <minWidth>
                    <Region fx:constant="USE_PREF_SIZE"/>
                </minWidth>
                <padding>
                    <Insets top="5" right="20" bottom="5" left="20" />
                </padding>
            </Label>

        </HBox>
    </GridPane>
</HBox>
