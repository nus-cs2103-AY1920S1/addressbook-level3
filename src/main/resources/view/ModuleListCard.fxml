<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="moduleCardPane" fx:id="moduleCardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="10" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" right="5" left="5"/>
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="name" text="\$first" styleClass="cell_big_label"/>
                <Label fx:id="mcCount" styleClass="cell_small_label" wrapText="true" text="\$McCount"/>
                <Label fx:id="prereqs" styleClass="cell_small_label" wrapText="true" text="\$Prereqs"/>
            </HBox>
            <FlowPane fx:id="tags"/>
        </VBox>
    </GridPane>
</HBox>
