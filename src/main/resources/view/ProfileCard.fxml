<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="recipeListCard" alignment="CENTER" prefWidth="130.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="5.0" top="5.0" />
   </padding>
   <children>
      <Label text="My Profile" />
      <VBox alignment="TOP_CENTER" prefWidth="100.0">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="femaleAvatar" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../images/female_avatar.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="maleAvatar" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../images/male_avatar.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <Label fx:id="name" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" styleClass="cell_big_label" text="\\$name" textAlignment="CENTER" wrapText="true">
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" styleClass="cell_label" text="Date of Birth" />
            <Label fx:id="dob" styleClass="cell_medium_label" text="-" />
         </children>
         <VBox.margin>
            <Insets bottom="3.0" top="3.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label styleClass="cell_label" text="Gender" />
            <Label fx:id="gender" styleClass="cell_medium_label" text="-" />
         </children>
         <VBox.margin>
            <Insets bottom="3.0" top="3.0" />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label styleClass="cell_label" text="Blood Type" />
            <Label fx:id="bloodType" styleClass="cell_medium_label" text="-" />
         </children>
         <VBox.margin>
            <Insets bottom="3.0" top="3.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Label styleClass="cell_label" text="Weight:">
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <Label fx:id="weight" styleClass="cell_medium_label" text="-" />
         </children>
         <opaqueInsets>
            <Insets bottom="2.0" top="5.0" />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label styleClass="cell_label" text="Height:">
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <Label fx:id="height" styleClass="cell_medium_label" text="-" />
         </children>
         <opaqueInsets>
            <Insets bottom="5.0" top="2.0" />
         </opaqueInsets>
      </HBox>
      <Label styleClass="cell_small_header" text="Medical Histories:" wrapText="true">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <VBox fx:id="medicalHistories" alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets top="2.0" />
         </padding>
      </VBox>
   </children>
</VBox>
