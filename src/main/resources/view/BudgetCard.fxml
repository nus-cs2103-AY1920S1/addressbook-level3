<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
            </HBox>
            <HBox prefWidth="256.0">
                <children>
                    <Label fx:id="amountText" styleClass="cell_small_label" text="Amount Set: " />
                    <Label fx:id="amount" styleClass="cell_small_label" text="\$amount" >
                        <padding>
                            <Insets left="4.0" />
                        </padding>
                    </Label>
                    <Label fx:id="currency" styleClass="cell_small_label" text="\$currency">
                        <padding>
                            <Insets left="4.0" />
                        </padding>
                    </Label>
                </children>
            </HBox>
            <HBox prefWidth="256.0">
                <children>
                    <Label fx:id="amountLeftText" styleClass="cell_small_label" text="Amount Left: " />
                    <Label fx:id="amountLeft" styleClass="cell_small_label" text="\$amountLeft" >
                        <padding>
                            <Insets left="4.0" />
                        </padding>
                    </Label>
                    <Label fx:id="currencyLeft" styleClass="cell_small_label" text="\$currency">
                        <padding>
                            <Insets left="4.0" />
                        </padding>
                    </Label>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Label fx:id="startDateText" styleClass="cell_small_label" text="Start: " />
                    <Label fx:id="startDate" styleClass="cell_small_label" text="\$startDate" >
                        <padding>
                            <Insets left="4.0" />
                        </padding>
                    </Label>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Label fx:id="endDateText" styleClass="cell_small_label" text="End: " />
                    <Label fx:id="endDate" styleClass="cell_small_label" text="\$endDate" >
                        <padding>
                            <Insets left="4.0" />
                        </padding>
                    </Label>
                </children>
            </HBox>
        </VBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</HBox>
