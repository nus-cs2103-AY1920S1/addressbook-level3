<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    <ScrollPane fx:id="listHeaderContainer" prefWidth="300" vbarPolicy="NEVER" hbarPolicy="NEVER" fitToWidth="true">
        <GridPane id="listHeaders" fx:id="listHeaders" prefWidth="300">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="40" />
                <ColumnConstraints percentWidth="35" />
            </columnConstraints>
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <Label text="Name" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS"/>
            <Label text="Email" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
            <Label text="Role" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS"/>
        </GridPane>
    </ScrollPane>
    <ScrollPane fx:id="listMemberContainer" minHeight="150" prefWidth="300" vbarPolicy="NEVER" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" fitToWidth="true">
        <VBox fx:id="listMembers" prefWidth="300" spacing="10">
        </VBox>
    </ScrollPane>
</VBox>
