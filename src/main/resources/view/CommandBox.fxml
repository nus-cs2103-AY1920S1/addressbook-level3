<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane HBox.hgrow="ALWAYS">
         <children>
           <TextField fx:id="commandTextField" onAction="#handleCommandEntered" prefHeight="30.0" promptText="How may I help you?">
               <font>
                  <Font name="Gill Sans MT Italic" size="13.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </TextField>
            <Label focusTraversable="false" prefHeight="24.0" prefWidth="12.0" text="&gt;" StackPane.alignment="CENTER_LEFT">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <padding>
                  <Insets left="2.0" />
               </padding>
            </Label>
         </children>
      </StackPane>
      <Button focusTraversable="false" mnemonicParsing="false" onMouseClicked="#handleCommandEntered" text="Send">
         <HBox.margin>
            <Insets left="5.0" top="3.0" />
         </HBox.margin>
      </Button>
   </children>
</HBox>
