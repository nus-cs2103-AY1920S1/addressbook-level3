@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "a:AddCommand" as AddCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant ":ModelManager" as ModelManager MODEL_COLOR
participant ":UniqueRecordList" as UniqueRecordList MODEL_COLOR
end box
[-> LogicManager : execute(add)
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(add)
activate AddressBookParser

create AddCommand
AddressBookParser -> AddCommand
activate AddCommand

AddCommand --> AddressBookParser : record:Bmi
deactivate AddCommand

AddressBookParser --> LogicManager : command
deactivate AddressBookParser

LogicManager -> Model : execute(model)
activate Model

Model -> ModelManager : addRecord(record)
activate ModelManager

ModelManager -> UniqueRecordList : add(record)
activate UniqueRecordList

UniqueRecordList -> UniqueRecordList :contains(record)
UniqueRecordList -> UniqueRecordList :add(record)
UniqueRecordList --> ModelManager :
deactivate UniqueRecordList

ModelManager --> Model
deactivate ModelManager

Model --> LogicManager
deactivate Model

AddCommand -[hidden]-> LogicManager : result
destroy AddCommand

[<--LogicManager
deactivate LogicManager
@enduml
