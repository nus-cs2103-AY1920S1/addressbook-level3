<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root minHeight="600" minWidth="800.0" title="Demo" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <VBox>
                <ListView fx:id="mainList" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          VBox.vgrow="ALWAYS" onMouseClicked="#handleListClicked" />
                <GridPane>
                    <Button fx:id="editBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Edit"
                            GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" onAction="#handleEditClicked"/>
                    <Button fx:id="execBtn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Execute"
                            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                            onAction="#handleExecClicked"/>
                </GridPane>
            </VBox>
        </Scene>
    </scene>
</fx:root>
